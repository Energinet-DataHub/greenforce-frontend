{
  "openapi": "3.0.4",
  "info": {
    "title": "ActorConversation | v1",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://app-api-actcon-d-we-002.azurewebsites.net/"
    }
  ],
  "paths": {
    "/api/health": {
      "get": {
        "tags": [
          "ActorConversation"
        ],
        "operationId": "health",
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "text/plain": {
                "schema": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    },
    "/api/GetConversation/api/GetConversation/{conversationId}": {
      "get": {
        "tags": [
          "GetConversation"
        ],
        "operationId": "GetConversation",
        "parameters": [
          {
            "name": "conversationId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/ConversationDto"
                }
              },
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ConversationDto"
                }
              },
              "text/json": {
                "schema": {
                  "$ref": "#/components/schemas/ConversationDto"
                }
              }
            }
          }
        }
      }
    },
    "/api/GetListOfConversations": {
      "get": {
        "tags": [
          "GetAllConversations"
        ],
        "summary": "Get all conversations.",
        "operationId": "GetListOfConversations",
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/ListOfConversationsDto"
                }
              },
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ListOfConversationsDto"
                }
              },
              "text/json": {
                "schema": {
                  "$ref": "#/components/schemas/ListOfConversationsDto"
                }
              }
            }
          }
        }
      }
    },
    "/api/StartConversation": {
      "post": {
        "tags": [
          "Start"
        ],
        "summary": "Starts a conversation",
        "description": "Example request for QuestionForEnerginet:\n\n```\n   {\n      \"subject\": \"QuestionForEnerginet\",\n      \"meteringPointIdentification\": \"570715000000033841\",\n      \"glnNumberForReceivers\": [ \"5790001330552\"],\n      \"internalNote\": \"\",\n      \"conversationMessage\": {\n          \"senderEmail\": \"noreply@energinet.dk\",\n          \"senderGlnNumber\": \"5790001330553\",\n          \"anonymous\": true,\n          \"content\": \"Test message\",\n          \"createdBy\": \"User id of the sender\"\n       }\n    }\n ```",
        "operationId": "StartConversation",
        "requestBody": {
          "description": "Specifies the new Conversation.",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/StartConversationRequest"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/StartConversationRequest"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/StartConversationResponse"
                }
              },
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/StartConversationResponse"
                }
              },
              "text/json": {
                "schema": {
                  "$ref": "#/components/schemas/StartConversationResponse"
                }
              }
            }
          },
          "400": {
            "description": "The specified conversation does not meet the requirements",
            "content": {
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              },
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              },
              "text/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "ConversationDto": {
        "type": "object",
        "required": [
          "conversationId",
          "meteringPoint",
          "messages"
        ],
        "properties": {
          "conversationId": {
            "type": "string",
            "format": "uuid"
          },
          "meteringPoint": {
            "type": "string"
          },
          "messages": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/ConversationMessageDto"
            }
          }
        }
      },
      "ConversationMessage": {
        "type": "object",
        "description": "The Conversation message",
        "required": [
          "senderEmail",
          "senderGlnNumber",
          "anonymous",
          "content",
          "createdBy"
        ],
        "properties": {
          "senderEmail": {
            "type": "string",
            "description": "Email of the sender"
          },
          "senderGlnNumber": {
            "type": "string",
            "description": "GLN number of the sender.  \nThe GLN number consists only of digits and can be at most 14 characters length."
          },
          "anonymous": {
            "type": "boolean",
            "description": "Specifies whether the message is anonymous with respect to the Sender information."
          },
          "content": {
            "type": "string",
            "description": "The message content, thus the body itself.\nCan contain at most 5000 characters and should not be empty."
          },
          "createdBy": {
            "type": "string",
            "description": "UserId of the user, who created the message."
          }
        }
      },
      "ConversationMessageDto": {
        "type": "object",
        "required": [
          "senderEmail",
          "content",
          "createdBy",
          "createdTime"
        ],
        "properties": {
          "senderEmail": {
            "type": "string"
          },
          "content": {
            "type": "string"
          },
          "createdBy": {
            "type": "string"
          },
          "createdTime": {
            "type": "string",
            "format": "date-time"
          }
        }
      },
      "ConversationSubject": {
        "description": "Conversation subjects",
        "enum": [
          "QuestionForEnerginet"
        ]
      },
      "ConverstionInfoDto": {
        "type": "object",
        "required": [
          "conversationId",
          "meteringPoint"
        ],
        "properties": {
          "conversationId": {
            "type": "string",
            "format": "uuid"
          },
          "meteringPoint": {
            "type": "string"
          }
        }
      },
      "ListOfConversationsDto": {
        "type": "object",
        "required": [
          "conversations"
        ],
        "properties": {
          "conversations": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/ConverstionInfoDto"
            }
          }
        }
      },
      "ProblemDetails": {
        "type": "object",
        "properties": {
          "type": {
            "type": "string",
            "nullable": true
          },
          "title": {
            "type": "string",
            "nullable": true
          },
          "status": {
            "format": "int32",
            "pattern": "^-?(?:0|[1-9]\\d*)$",
            "nullable": true
          },
          "detail": {
            "type": "string",
            "nullable": true
          },
          "instance": {
            "type": "string",
            "nullable": true
          }
        }
      },
      "StartConversationRequest": {
        "type": "object",
        "description": "Request for starting a new conversation",
        "required": [
          "subject",
          "meteringPointIdentification",
          "glnNumberForReceivers",
          "conversationMessage"
        ],
        "properties": {
          "subject": {
            "$ref": "#/components/schemas/ConversationSubject"
          },
          "meteringPointIdentification": {
            "type": "string",
            "description": "MeteringPointIdentification. \n18 digits GSRN number consisting of digits only."
          },
          "glnNumberForReceivers": {
            "type": "array",
            "description": "GLN numbers of the receivers. \nGLN numbers consisting only of digits and can be at most 14 characters length.\nThere can be only one receiver at present.",
            "items": {
              "type": "string"
            }
          },
          "internalNote": {
            "type": "string",
            "description": "Optional Internal note from the Organization, that created the Conversation.  \nCan contain at most 80 characters and will be assumed empty, if not specified"
          },
          "conversationMessage": {
            "$ref": "#/components/schemas/ConversationMessage"
          }
        }
      },
      "StartConversationResponse": {
        "type": "object",
        "description": "Response for the request for starting a conversation",
        "required": [
          "conversationId"
        ],
        "properties": {
          "conversationId": {
            "type": "string",
            "format": "uuid"
          }
        }
      }
    }
  },
  "tags": [
    {
      "name": "ActorConversation"
    },
    {
      "name": "GetConversation"
    },
    {
      "name": "GetAllConversations"
    },
    {
      "name": "Start"
    }
  ]
}