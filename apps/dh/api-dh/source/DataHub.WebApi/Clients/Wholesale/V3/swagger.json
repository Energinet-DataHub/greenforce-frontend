{
  "openapi": "3.0.1",
  "info": {
    "title": "Wholesale Web API",
    "version": "3.0"
  },
  "paths": {
    "/v3/calculations/{calculationId}": {
      "get": {
        "tags": [
          "Calculation"
        ],
        "summary": "Returns a calculation matching calculationId.",
        "operationId": "GetCalculation",
        "parameters": [
          {
            "name": "calculationId",
            "in": "path",
            "required": true,
            "description": "CalculationId",
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/CalculationDto"
                }
              }
            }
          }
        }
      }
    },
    "/v3/calculations": {
      "get": {
        "tags": [
          "Calculation"
        ],
        "summary": "Get calculations that matches the criteria specified",
        "operationId": "SearchCalculations",
        "parameters": [
          {
            "name": "gridAreaCodes",
            "in": "query",
            "description": "",
            "schema": {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          },
          {
            "name": "executionState",
            "in": "query",
            "description": "",
            "schema": {
              "allOf": [
                {
                  "$ref": "#/components/schemas/CalculationState"
                }
              ]
            }
          },
          {
            "name": "minExecutionTime",
            "in": "query",
            "description": "",
            "schema": {
              "type": "string",
              "format": "date-time"
            }
          },
          {
            "name": "maxExecutionTime",
            "in": "query",
            "description": "",
            "schema": {
              "type": "string",
              "format": "date-time"
            }
          },
          {
            "name": "periodStart",
            "in": "query",
            "description": "",
            "schema": {
              "type": "string",
              "format": "date-time"
            }
          },
          {
            "name": "periodEnd",
            "in": "query",
            "description": "",
            "schema": {
              "type": "string",
              "format": "date-time"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/CalculationDto"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/v3/SettlementReport": {
      "get": {
        "tags": [
          "SettlementReport"
        ],
        "summary": "Returns a subset of calculations that are valid for use with settlement reports.\r\nSettlement reports must access only a subset of data about calculations, as settlement reports are used by actors.",
        "operationId": "GetApplicableCalculations",
        "parameters": [
          {
            "name": "calculationType",
            "in": "query",
            "schema": {
              "description": "Defines the wholesale calculation type",
              "allOf": [
                {
                  "$ref": "#/components/schemas/CalculationType"
                }
              ]
            }
          },
          {
            "name": "gridAreaCodes",
            "in": "query",
            "schema": {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          },
          {
            "name": "periodStart",
            "in": "query",
            "schema": {
              "type": "string",
              "format": "date-time"
            }
          },
          {
            "name": "periodEnd",
            "in": "query",
            "schema": {
              "type": "string",
              "format": "date-time"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/SettlementReportApplicableCalculationDto"
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "CalculationDto": {
        "type": "object",
        "description": "An immutable calculation.",
        "additionalProperties": false,
        "properties": {
          "runId": {
            "type": "integer",
            "format": "int64",
            "nullable": true
          },
          "calculationId": {
            "type": "string",
            "format": "uuid"
          },
          "periodStart": {
            "type": "string",
            "format": "date-time"
          },
          "periodEnd": {
            "type": "string",
            "format": "date-time"
          },
          "resolution": {
            "type": "string"
          },
          "unit": {
            "type": "string"
          },
          "scheduledAt": {
            "type": "string",
            "format": "date-time"
          },
          "executionTimeStart": {
            "type": "string",
            "format": "date-time",
            "nullable": true
          },
          "executionTimeEnd": {
            "type": "string",
            "format": "date-time",
            "nullable": true
          },
          "orchestrationState": {
            "allOf": [
              {
                "$ref": "#/components/schemas/CalculationOrchestrationState"
              }
            ]
          },
          "areSettlementReportsCreated": {
            "type": "boolean"
          },
          "gridAreaCodes": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "calculationType": {
            "description": "Defines the wholesale calculation type",
            "allOf": [
              {
                "$ref": "#/components/schemas/CalculationType"
              }
            ]
          },
          "createdByUserId": {
            "type": "string",
            "format": "uuid"
          },
          "completedTime": {
            "type": "string",
            "format": "date-time",
            "nullable": true
          }
        }
      },
      "CalculationOrchestrationState": {
        "type": "string",
        "enum": [
          "Scheduled",
          "Calculating",
          "Calculated",
          "CalculationFailed",
          "ActorMessagesEnqueuing",
          "ActorMessagesEnqueued",
          "ActorMessagesEnqueuingFailed",
          "Completed"
        ]
      },
      "CalculationState": {
        "type": "string",
        "enum": [
          "Pending",
          "Executing",
          "Completed",
          "Failed"
        ]
      },
      "CalculationType": {
        "type": "string",
        "description": "Defines the wholesale calculation type",
        "enum": [
          "BalanceFixing",
          "Aggregation",
          "WholesaleFixing",
          "FirstCorrectionSettlement",
          "SecondCorrectionSettlement",
          "ThirdCorrectionSettlement"
        ]
      },
      "SettlementReportApplicableCalculationDto": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "calculationId": {
            "type": "string",
            "format": "uuid"
          },
          "calculationTime": {
            "type": "string",
            "format": "date-time"
          },
          "periodStart": {
            "type": "string",
            "format": "date-time"
          },
          "periodEnd": {
            "type": "string",
            "format": "date-time"
          },
          "gridAreaCode": {
            "type": "string"
          }
        }
      }
    },
    "securitySchemes": {
      "Bearer": {
        "type": "http",
        "description": "JWT Authorization header using the Bearer scheme. Example: \"Authorization: Bearer {token}\"",
        "scheme": "Bearer"
      }
    }
  },
  "security": [
    {
      "Bearer": [
        "Bearer"
      ]
    }
  ]
}