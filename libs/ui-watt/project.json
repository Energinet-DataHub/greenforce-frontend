{
  "name": "ui-watt",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "library",
  "sourceRoot": "libs/ui-watt/src",
  "prefix": "watt",
  "targets": {
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/libs/ui-watt"],
      "options": {
        "jestConfig": "libs/ui-watt/jest.config.ts",
        "passWithNoTests": true
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "options": {
        "lintFilePatterns": [
          "libs/ui-watt/src/**/*.ts",
          "libs/ui-watt/src/**/*.html"
        ]
      },
      "outputs": ["{options.outputFile}"]
    },
    "storybook": {
      "executor": "@storybook/angular:start-storybook",
      "options": {
        "port": 4400,
        "host": "0.0.0.0",
        "configDir": "libs/ui-watt/.storybook",
        "browserTarget": "ui-watt:build-storybook",
        "compodoc": true,
        "compodocArgs": ["-e", "json", "-d", "./libs/ui-watt"]
      },
      "configurations": {
        "ci": {
          "quiet": true
        }
      }
    },
    "build-storybook": {
      "executor": "@storybook/angular:build-storybook",
      "outputs": ["{options.outputPath}"],
      "options": {
        "styles": ["libs/ui-watt/.storybook/styles.scss"],
        "stylePreprocessorOptions": {
          "includePaths": ["libs/ui-watt/src/lib/styles"]
        },
        "outputDir": "dist/designsystem",
        "configDir": "libs/ui-watt/.storybook",
        "browserTarget": "ui-watt:build-storybook",
        "compodoc": true,
        "compodocArgs": ["-e", "json", "-d", "./libs/ui-watt"]
      },
      "configurations": {
        "ci": {
          "quiet": true
        }
      }
    }
  },
  "tags": ["product:watt", "type:ui", "type:data-access"]
}
